<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Cards</title>
</head>
<body>
    <header>
        <div>
            <a href="/">Home</a>
            <a href="/all">Maybelline Products</a>
            <a href="/mycards">Mycard</a>
        </div>
    </header>

    <section class="ProductSection">
        <% mArray.forEach(makeup =>{%> 
            <div>
            <form action="/details/<%= makeup.id %> " method="get">
                <input type="hidden" name="name" value="<%= makeup.name %> ">
                <input type="hidden" name="price" value="<%= makeup.price %> ">
                <input type="hidden" name="image" value="<%= makeup.image %> ">
                <input type="hidden" name="description" value="<%= makeup.description %> ">
                <img src="<%= makeup.image %> " alt="makeup">
                <h4> <%= makeup.name %> </h4>
                <p> <%= makeup.price %> </p>
            </div>
            <button>See Details</button>
        </form>
        <% }) %> 
    </section>
    
</body>
</html>